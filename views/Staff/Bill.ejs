    <h1>
      Manage Bills
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Manage Bills</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Bills</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <form action="/StaffInterface/BillSearch" method="get">
              <div class="input-group" style="width: 40%;">
                <input id="date" class="form-control" type="date" name="datebill" value="">
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit" value="Search" style="margin-top: 0px;"><span class="glyphicon glyphicon-search"></span></button>
                </span>
              </div>
            </form>
            <br>
            <table id="Bills" class="table table-bordered">
              <tr>
                <th> </th>
                <th>Email</th>
                <th>Name Customer</th>
                <th>Phone Number</th>
                <th>Bill</th>
                <th>Price</th>
                <th>Time Order</th>
                <th>Delivery Location</th>
                <th>Status</th>
                <th>Note</th>
                <th> </th>              

              </tr>
              <%for (var i = 0 ; i < result.length;i++){%>
                <tr>
                  <td><button type="button"  class="btn btn-info" onclick="window.location.href='/StaffInterface/ConfirmBillStaff?id=<%= result[i]._id%>';">Confirm</button></td>

                  <td><%=result[i].email%></td>
                  <td><%=result[i].name%></td>
                  <td><%=result[i].phone%></td>
                  <td>
                    <%var total = 0 ;%>
                    <% for(var n=0;n<result[i].cake.length; n++){%>
                      <option value="<%= result[i].cake[n].cake_name%>"><%= result[i].cake[n].cake_name%>  x  <%=result[i].cake[n].quantity%></option>
                      <%
                      total = total +result[i].cake[n].price * result[i].cake[n].quantity;
                      %>
                      <%}%>
                    </td>
                    <td><%=total%></td>
                    <td><%=result[i].time.toUTCString()%></td>
                    <td><%=result[i].address%></td>

                    <% if(result[i].confirm == true){ %>
                      <td>
                        Confirm
                      </td>
                      <% } else{%>
                        <td>
                          UnConfirm
                        </td>
                        <%} %>
                        <form action="/StaffInterface/updateNote" method="get" >
                          <td><input type="text"  class="form-control" placeholder="Note" name="note" value="<%=result[i].note%>" ></td>

                          <input type="hidden"  class="form-control" placeholder="Note" name="id" value="<%=result[i]._id%>" >
                          <td><button type="submit" class="btn btn-info" >Update</button></td>
                        </form>
                        <%if(result[i].status == false){%>
                          <td><input type="button"  class="btn btn-info" onclick="window.location.href='/StaffInterface/Seen?id=<%= result[i]._id%>';" value="New Order"</td>

                          <%}else{%>
                            <td><input type="hidden"  class="btn btn-info" onclick="window.location.href='/StaffInterface/Seen?id=<%= result[i]._id%>';" value="New Order"</td>

                            <%}%>
                          </tr>
                          <%}%>
                        </table>
                        <!-- /.box-body -->
                      </div>
                    </div>
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                </section>
                <!-- /.content -->
